<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".CategoryActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="80dp"
                android:src="@drawable/img_logo"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="99dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_pagi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp"
                    android:src="@drawable/btn_pagi" />

                <ImageView
                    android:id="@+id/btn_petang"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btn_petang" />

                <ImageView
                    android:id="@+id/btn_doa_pilihan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btn_doapilihan" />

                <ImageView
                    android:id="@+id/btn_bada_shalat"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btn_dzikirshalat" />

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>
